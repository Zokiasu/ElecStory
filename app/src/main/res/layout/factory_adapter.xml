<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_factory_adapter"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="#fff"
    tools:ignore="MissingConstraints">

    <android.support.v7.widget.CardView
        android:id="@+id/CardViewColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/colorGray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageFactorys"
                    android:layout_width="@dimen/size_factory_adapter"
                    android:layout_height="@dimen/size_factory_adapter"
                    tools:ignore="ContentDescription" />

                <com.example.elecstory.OtherClass.CustomFontTextView
                    android:id="@+id/LevelFactorys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageFactorys"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="i"
                    android:textColor="#000"
                    android:textSize="@dimen/size_text"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.example.elecstory.OtherClass.CustomFontTextView
                    android:id="@+id/FactorysName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Hello"
                    android:textColor="#000"
                    android:textSize="@dimen/size_text_plus" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <com.example.elecstory.OtherClass.CustomFontTextView
                    android:id="@+id/EnergyGenFact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EnergyGen"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <com.example.elecstory.OtherClass.CustomFontTextView
                    android:id="@+id/UpdatePriceFact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UpdatePrce"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.v7.widget.CardView>