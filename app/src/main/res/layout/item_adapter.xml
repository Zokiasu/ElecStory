<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/size_object_adapter"
        android:layout_height="@dimen/size_object_adapter"
        android:layout_centerInParent="true"
        app:cardCornerRadius="13dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageFactorys"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                tools:ignore="ContentDescription" />

            <com.example.elecstory.OtherClass.CustomFontTextView
                android:id="@+id/LevelFactorys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textColor="#000"
                android:textSize="@dimen/size_text"
                android:text="i"/>

            <com.example.elecstory.OtherClass.CustomFontTextView
                android:id="@+id/FactorysName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Hello"
                android:textColor="#000"
                android:textSize="@dimen/size_adapter_text"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>