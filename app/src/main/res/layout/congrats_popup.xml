<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#01A0FF"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="#ffffff"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ImageJok"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/jokereclair"
            tools:ignore="MissingConstraints" />

        <com.example.elecstory.OtherClass.CustomFontTextView
            android:id="@+id/GratzMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignTop="@+id/ImageJok"
            android:layout_marginTop="85dp"
            android:gravity="center"
            android:text="Hello World"
            android:textSize="@dimen/size_text_plus"
            android:textStyle="bold"
            android:textColor="#01A0FF"/>

    </RelativeLayout>
</RelativeLayout>