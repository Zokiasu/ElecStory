<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="#01A0FF"
        android:padding="10dp">

        <TextView
            android:id="@+id/CloseAdsWindows"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:text="X"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/cerclebackground"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingVertical="5dp">

            <com.example.elecstory.OtherClass.CustomFontTextView
                android:id="@+id/TitleAdPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:text="Title Ads"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_ad_title"/>

            <ImageView
                android:id="@+id/ImageAds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/skip30"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingVertical="5dp">

                <com.example.elecstory.OtherClass.CustomFontTextView
                    android:id="@+id/NumberEarnedAd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Message Rewards"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_text"/>

                <com.example.elecstory.OtherClass.CustomFontButton
                    android:id="@+id/WatchAds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:paddingHorizontal="15dp"
                    android:text="X"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_title"
                    android:textAllCaps="false"
                    android:drawableEnd="@drawable/minidiamond"
                    android:background="@drawable/custom_button_ad"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>