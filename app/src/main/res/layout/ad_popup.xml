<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_popup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#01A0FF"
        tools:ignore="UselessLeaf">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.example.elecstory.OtherClass.CustomFontTextView
                android:id="@+id/TitleAdPopup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Title"
                android:textSize="@dimen/size_text_ad_title"/>

            <Button
                android:id="@+id/CloseAdsWindows"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button_popup"
                android:layout_alignRight="@+id/TitleAdPopup"
                android:layout_alignTop="@+id/TitleAdPopup"
                android:layout_alignBottom="@+id/TitleAdPopup"
                android:text="x"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">

            <com.example.elecstory.OtherClass.CustomFontTextView
                android:id="@+id/TimeAfk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Time Afk"/>

            <ImageView
                android:id="@+id/ImageAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TimeAfk"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/CardViewAdInfo"/>

            <android.support.v7.widget.CardView
                android:id="@+id/CardViewAdInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff"
                    android:gravity="center">

                    <com.example.elecstory.OtherClass.CustomFontTextView
                        android:id="@+id/Earned"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="You can earned"
                        android:textSize="@dimen/size_text"/>

                    <com.example.elecstory.OtherClass.CustomFontTextView
                        android:id="@+id/NumberEarnedAd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Number"
                        android:textSize="@dimen/size_text_plus"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center">

                        <com.example.elecstory.OtherClass.CustomFontButton
                            android:id="@+id/WatchAds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_button_ad"
                            android:text="Watch ADS"
                            android:textSize="@dimen/size_text"
                            android:textAllCaps="false"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>