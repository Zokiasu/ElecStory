<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="1dp"
    android:theme="@style/Theme.Transparent">

    <TextView
        android:id="@+id/closeMenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/rankingMenu"
        android:gravity="center"
        android:text="X"
        android:textStyle="bold"
        android:textColor="@color/colorRed"
        android:background="@drawable/cerclebackgroundred"/>

    <com.example.elecstory.OtherClass.CustomFontButton
        android:id="@+id/rankingMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="50dp"
        android:layout_above="@+id/optionMenu"
        android:padding="10dp"
        android:text="Ranking"
        android:textAllCaps="false"
        android:textSize="@dimen/size_text"
        android:textColor="#fff"
        android:background="@drawable/custom_button" />

    <com.example.elecstory.OtherClass.CustomFontButton
        android:id="@+id/optionMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="50dp"
        android:layout_above="@+id/feedbackMenu"
        android:padding="10dp"
        android:text="Option"
        android:textAllCaps="false"
        android:textSize="@dimen/size_text"
        android:textColor="#fff"
        android:background="@drawable/custom_button" />

    <com.example.elecstory.OtherClass.CustomFontButton
        android:id="@+id/feedbackMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="50dp"
        android:padding="10dp"
        android:text="Feedback"
        android:textAllCaps="false"
        android:textSize="@dimen/size_text"
        android:textColor="#fff"
        android:background="@drawable/custom_button" />

</LinearLayout>